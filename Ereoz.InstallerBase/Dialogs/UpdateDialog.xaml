<UserControl x:Class="Ereoz.InstallerBase.Dialogs.UpdateDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ereoz.InstallerBase.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="308"
             d:DesignWidth="520">
    <StackPanel>
        <Border DockPanel.Dock="Top"
                BorderThickness="0 0 0 1"
                BorderBrush="#A0A0A0"
                Height="52">
            <DockPanel Background="#000116">
                <StackPanel DockPanel.Dock="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 16 0">
                    <TextBlock Text="{Binding InstallerName}"
                               HorizontalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0 0 0 -2">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0.5"
                                                 EndPoint="1,0.5">
                                <GradientStop Color="#C3AFDB" />
                                <GradientStop Color="#8B65E3"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="Installer"
                               FontSize="10"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0.5"
                                                 EndPoint="1,0.5">
                                <GradientStop Color="#8B65E3" />
                                <GradientStop Color="#C3AFDB"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
                <TextBlock Text="{Binding UpdateHeader}"
                           FontWeight="SemiBold"
                           Padding="16">
                    <TextBlock.Background>
                        <LinearGradientBrush StartPoint="0,0.5"
                                             EndPoint="1,0.5">
                            <GradientStop Color="#F0F0F0" />
                            <GradientStop Color="#C3AFDB"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </TextBlock.Background>
                </TextBlock>
                <Border>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5"
                                             EndPoint="1,0.5">
                            <GradientStop Color="#C3AFDB" />
                            <GradientStop Color="#000116"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </DockPanel>
        </Border>
        <TextBlock Text="{Binding UpdateInfo}"
                   TextWrapping="Wrap"
                   Margin="16"/>
    </StackPanel>
</UserControl>
