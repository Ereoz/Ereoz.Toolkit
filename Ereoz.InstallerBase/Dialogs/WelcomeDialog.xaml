<UserControl x:Class="Ereoz.InstallerBase.Dialogs.WelcomeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ereoz.InstallerBase.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="308"
             d:DesignWidth="520">
    <DockPanel>
        <Grid Background="#000116"
              Width="160">
            <StackPanel VerticalAlignment="Center">
                <Viewbox HorizontalAlignment="Center"
                         Margin="8 0">
                    <TextBlock Text="{Binding InstallerName}"
                               FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0.5"
                                                 EndPoint="1,0.5">
                                <GradientStop Color="#C3AFDB" />
                                <GradientStop Color="#8B65E3"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Viewbox>
                <TextBlock Text="Installer"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0.5"
                                             EndPoint="1,0.5">
                            <GradientStop Color="#8B65E3" />
                            <GradientStop Color="#C3AFDB"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid>
            <TextBlock Text="{Binding WelcomeHello}"
                       TextWrapping="Wrap"
                       FontSize="20"
                       FontWeight="SemiBold"
                       VerticalAlignment="Top"
                       Margin="16" />
            <TextBlock Text="{Binding WelcomeInfo}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Margin="16" />
            <TextBlock Text="{Binding WelcomeNext}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Bottom"
                       Margin="16" />
        </Grid>

    </DockPanel>
</UserControl>
