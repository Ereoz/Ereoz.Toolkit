<Window x:Class="Ereoz.InstallerBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ereoz.InstallerBase"
        mc:Ignorable="d"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="{Binding WindowTitle}">
    <DockPanel Width="520"
               Height="360">
        <Border DockPanel.Dock="Bottom"
                BorderThickness="0 1 0 0"
                BorderBrush="White"
                Background="#F0F0F0"
                Height="52">
            <DockPanel>
                <DockPanel VerticalAlignment="Center"
                           Margin="16 0 0 0"
                           Opacity="0.5"
                           Visibility="Hidden">
                    <TextBlock Foreground="DimGray"
                               Text="Ver: "
                               FontSize="10" />
                    <TextBlock Foreground="DimGray"
                               Text="{Binding InstallerVersion}"
                               FontSize="10" />
                </DockPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="&lt; Назад"
                            Command="{Binding DialogNavigateCommand}"
                            Visibility="{Binding LastVisibility}"
                            CommandParameter="last"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                    <Button Content="Далее &gt;"
                            Command="{Binding DialogNavigateCommand}"
                            Visibility="{Binding NextVisibility}"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                    <Button Content="Установить"
                            Command="{Binding InstallCommand}"
                            Visibility="{Binding InstallVisibility}"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                    <Button Content="Обновить"
                            Command="{Binding InstallCommand}"
                            Visibility="{Binding UpdateVisibility}"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                    <Button Content="Восстановить"
                            Command="{Binding InstallCommand}"
                            Visibility="{Binding RepairVisibility}"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                    <Button Content="Отмена"
                            Command="{Binding CancelCommand}"
                            Visibility="{Binding CancelVisibility}"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                    <Button Content="Готово"
                            Command="{Binding DoneCommand}"
                            Visibility="{Binding DoneVisibility}"
                            Margin="0 0 16 0"
                            Height="22"
                            Width="80" />
                </StackPanel>
            </DockPanel>
        </Border>
        <Border BorderThickness="0 0 0 1"
                BorderBrush="#A0A0A0"
                Background="White">
            <ContentControl Content="{Binding CurrentDialog}"
                            Focusable="False" />
        </Border>
    </DockPanel>
</Window>
